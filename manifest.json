{

  "manifest_version": 2,
  "name": "Bored button",
  "description": "Redirect you to sites when you are bored. You can also add websites in options",
  "version": "1.0",

  "icons": {
    "48": "icons/bored.svg",
    "96": "icons/bored.svg"
  },

  "browser_action": {
    "default_popup": "popup/choose_beast.html"
  },

  "background": {
    "scripts": [
      "background/bored-handler.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": ["storage", "activeTab", "<all_urls>"]

}
